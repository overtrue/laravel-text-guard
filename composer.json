{
  "name": "overtrue/laravel-text-guard",
  "description": "TextGuard：可作 Rule 也可单用的字符串清洗/规范化工具",
  "license": "MIT",
  "authors": [
    {
      "name": "overtrue",
      "email": "anzhengchao@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.3",
    "illuminate/support": "^12.0",
    "ext-mbstring": "*",
    "ext-intl": "*"
  },
  "autoload": {
    "psr-4": {
      "Overtrue\\TextGuard\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^12.0",
    "orchestra/testbench": "^10.0",
    "jetbrains/phpstorm-attributes": "^1.0",
    "laravel/pint": "^1.24"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Overtrue\\TextGuard\\TextGuardServiceProvider"
      ],
      "aliases": {
        "TextGuard": "Overtrue\\TextGuard\\Facades\\TextGuard"
      }
    }
  },
  "scripts": {
    "post-merge": "composer install",
    "check-style": "vendor/bin/pint --test",
    "fix-style": "vendor/bin/pint",
    "test": "phpunit --colors"
  },
  "scripts-descriptions": {
    "test": "Run all tests.",
    "check-style": "Run style checks (only dry run - no fixing!).",
    "fix-style": "Run style checks and fix violations."
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  }
}
